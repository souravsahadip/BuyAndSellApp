<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProductUploadActivity">
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <EditText
        android:id="@+id/inputProductCondition"
        android:layout_width="124dp"
        android:layout_height="50dp"
        android:inputType="text"
        android:theme="@android:style/Theme.Light"
        app:layout_constraintStart_toStartOf="@+id/inputProducCategory"
        app:layout_constraintTop_toTopOf="@+id/textView15" />

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="410dp"
        android:layout_height="64dp"
        android:layout_marginTop="4dp"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </com.google.android.material.appbar.AppBarLayout>

    <EditText
        android:id="@+id/inputProductName"
        android:layout_width="124dp"
        android:layout_height="50dp"
        android:layout_marginStart="60dp"
        android:inputType="text"
        android:theme="@android:style/Theme.Light"
        app:layout_constraintStart_toEndOf="@+id/textView10"
        app:layout_constraintTop_toTopOf="@+id/textView10" />

    <EditText
        android:id="@+id/inputProducCategory"
        android:layout_width="124dp"
        android:layout_height="50dp"
        android:inputType="text"
        android:theme="@android:style/Theme.Light"
        app:layout_constraintStart_toStartOf="@+id/inputProductPrice"
        app:layout_constraintTop_toTopOf="@+id/textView16" />

    <EditText
        android:id="@+id/inputProductPrice"
        android:layout_width="124dp"
        android:layout_height="50dp"
        android:inputType="number|numberDecimal"
        android:theme="@android:style/Theme.Light"
        app:layout_constraintStart_toStartOf="@+id/inputProductName"
        app:layout_constraintTop_toTopOf="@+id/textView14" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="123dp"
        android:layout_height="46dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="100dp"
        android:text="Product Name:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appBarLayout" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="108dp"
        android:layout_height="51dp"
        android:layout_marginTop="52dp"
        android:text="Price:"
        app:layout_constraintStart_toStartOf="@+id/textView10"
        app:layout_constraintTop_toBottomOf="@+id/textView10" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="108dp"
        android:layout_height="51dp"
        android:layout_marginTop="44dp"
        android:text="Condition:"
        app:layout_constraintStart_toStartOf="@+id/textView16"
        app:layout_constraintTop_toBottomOf="@+id/textView16" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="108dp"
        android:layout_height="51dp"
        android:layout_marginTop="36dp"
        android:text="Category:"
        app:layout_constraintStart_toStartOf="@+id/textView14"
        app:layout_constraintTop_toBottomOf="@+id/textView14" />

    <Button
        android:id="@+id/buttonUploadProduct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="96dp"
        android:text="upload"
        app:layout_constraintEnd_toEndOf="@+id/inputProductCondition"
        app:layout_constraintTop_toBottomOf="@+id/inputProductCondition" />

    <include
        layout="@layout/logoutbutton"
        android:layout_width="122dp"
        android:layout_height="49dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@+id/textView15"
        app:layout_constraintTop_toBottomOf="@+id/buttonUploadProduct" />
</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
